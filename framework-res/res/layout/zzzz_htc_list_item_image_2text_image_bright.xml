    <ImageView android:layout_gravity="left" android:id="@id/img_indicator" android:layout_width="@dimen/htc_list_item_height" android:layout_height="@dimen/htc_list_item_height" android:scaleType="fitXY" />
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="fill" android:layout_width="fill_parent" android:layout_height="@dimen/htc_list_item_height">
